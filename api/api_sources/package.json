{
  "name": "lucy",
  "version": "1.0.0",
  "description": "API service for Lucy app",
  "main": "index.js",
  "scripts": {
    "build": "gulp",
    "start": "npm run build && node dist-server/index.js",
    "docker_start": "npm-run-all -p hotload watch",
    "deply_run": "npm run migration:run && node dist-server/index.js",
    "hotload": "npm run migration:run && NODE_ENV=dev-docker ./node_modules/.bin/nodemon sources/index.ts --exec ts-node",
    "watch": "gulp watch",
    "test:all": "NODE_ENV=unit_test npm run migration:run && NODE_ENV=unit_test jest --verbose --coverage --detectOpenHandles sources",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "typeorm": "typeorm",
    "test": "NODE_ENV=unit_test jest"
  },
  "author": "Pushan Mitra",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.5",
    "@types/csvtojson": "^1.1.5",
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.6",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.5.1",
    "awesome-typescript-loader": "^3.4.1",
    "del": "^3.0.0",
    "faker": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-load-plugins": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-typescript": "^5.0.1",
    "gulp-util": "^3.0.8",
    "jest": "^24.8.0",
    "nodemon": "latest",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "latest",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/node": "^11.13.10",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.8",
    "express": "^4.17.0",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "moment": "^2.24.0",
    "nodemailer": "^5.1.1",
    "pg": "^7.11.0",
    "q": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "source-map-loader": "^0.2.4",
    "typeorm": "latest"
  }
}
